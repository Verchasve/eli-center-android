             android:layout_height="50dp"
             android:text="" />

	    <ImageView
	        android:id="@+id/imageViewUK"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:src="@drawable/uk" />
	    
	    <TextView
             android:id="@+id/textView12"
             android:layout_width="5dp"
             android:layout_height="50dp"
