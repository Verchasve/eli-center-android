<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlListDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/ivFileImg"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:src="@drawable/folder" />

    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivFileImg"
        android:maxLines="1"
        android:text="Android"
        android:textSize="18dp"
        style="?filename" />

    <ImageView
        android:id="@+id/ivCheckImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/checkbox_unchecked" />
    
    <ImageView 
        android:id="@+id/ivBookmark"
        android:layout_width="23sp"
        android:layout_height="23sp"
        android:layout_alignBottom="@+id/ivFileImg"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvFileName"
        android:src="@drawable/i_bk" />

</RelativeLayout>