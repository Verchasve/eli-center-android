<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" 
    android:background="#ccc">

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eli Management" 
        android:textColor="#006191"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tvAppPkg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="com.eli.management" 
        android:textColor="#999"/>

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version : 1.2.0" 
        android:textColor="#555"/>

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size: 1,230 KB"
        android:textColor="#555" />
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: Phan mem quan ly doanh nghiep cua elisoft"
        android:textColor="#555" />

    <Button
        android:id="@+id/btUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Update" 
        android:width="200dp"/>

    <Button
        android:id="@+id/btInstall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Install"
        android:width="200dp" />

    <Button
        android:id="@+id/btUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Updated"
        android:width="200dp" 
        android:enabled="false"/>

</LinearLayout>